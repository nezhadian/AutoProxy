<Window
    x:Class="AutoProxy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoProxy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20,0" VerticalAlignment="Center">

            <Label>Port:</Label>
            <TextBox Text="{Binding proxy.Port}" />

            <Label>Delay:</Label>
            <TextBox Text="{Binding proxy.Delay}" />

            <CheckBox Margin="0,4,0,0" IsChecked="{Binding proxy.AutoSwitching}">Auto Switching</CheckBox>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding proxy.ConnectCommand}">Connect</Button>
                <Button Grid.Column="1" Command="{Binding proxy.DisconnectCommand}">Disconnect</Button>
            </Grid>

            <TextBlock
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                FontSize="16"
                Text="{Binding proxy.Status, Delay=100}" />
        </StackPanel>
    </Grid>
</Window>
